@page "/anomalies"
@using Microsoft.AspNetCore.Authorization

<PageTitle>Anomaly Workbench - MAK3R</PageTitle>

<link href="_content/MAK3R.UI/css/coming-soon.css" rel="stylesheet" />

<div class="coming-soon-page">
    <div class="page-header">
        <h1>
            <span class="material-symbols-outlined">warning</span>
            Anomaly Workbench
        </h1>
        <p class="text-muted">Monitor and investigate manufacturing anomalies</p>
    </div>

    <div class="coming-soon">
        <div class="coming-soon-content">
            <span class="material-symbols-outlined large-icon warning">troubleshoot</span>
            <h2>Coming Soon</h2>
            <p>The Anomaly Workbench is currently under development. This will provide comprehensive anomaly detection and analysis capabilities.</p>
            
            <div class="placeholder-features">
                <h3>Planned Features:</h3>
                <ul>
                    <li>Real-time anomaly detection</li>
                    <li>Machine learning-based analysis</li>
                    <li>Alert management system</li>
                    <li>Root cause analysis tools</li>
                    <li>Historical anomaly trends</li>
                    <li>Automated response workflows</li>
                </ul>
            </div>
            
            <div class="action-buttons">
                <a href="/dashboard" class="btn btn-primary">
                    <span class="material-symbols-outlined">dashboard</span>
                    Go to Dashboard
                </a>
                <a href="/machine-wall" class="btn btn-secondary">
                    <span class="material-symbols-outlined">precision_manufacturing</span>
                    Machine Wall
                </a>
            </div>
        </div>
    </div>
</div>

