@page "/twin"
@using Microsoft.AspNetCore.Authorization

<PageTitle>Digital Twin - MAK3R</PageTitle>

<link href="_content/MAK3R.UI/css/coming-soon.css" rel="stylesheet" />

<div class="coming-soon-page">
    <div class="page-header">
        <h1>
            <span class="material-symbols-outlined">account_tree</span>
            Digital Twin
        </h1>
        <p class="text-muted">Visualize and interact with your manufacturing digital twin</p>
    </div>

    <div class="coming-soon">
        <div class="coming-soon-content">
            <span class="material-symbols-outlined large-icon">model_training</span>
            <h2>Coming Soon</h2>
            <p>The Digital Twin visualization is currently under development. This will provide a comprehensive view of your manufacturing ecosystem.</p>
            
            <div class="placeholder-features">
                <h3>Planned Features:</h3>
                <ul>
                    <li>3D facility visualization</li>
                    <li>Real-time machine status overlay</li>
                    <li>Process flow mapping</li>
                    <li>Historical data replay</li>
                    <li>Predictive analytics integration</li>
                    <li>Interactive troubleshooting</li>
                </ul>
            </div>
            
            <div class="action-buttons">
                <a href="/dashboard" class="btn btn-primary">
                    <span class="material-symbols-outlined">dashboard</span>
                    Go to Dashboard
                </a>
                <a href="/machine-wall" class="btn btn-secondary">
                    <span class="material-symbols-outlined">precision_manufacturing</span>
                    Machine Wall
                </a>
            </div>
        </div>
    </div>
</div>

