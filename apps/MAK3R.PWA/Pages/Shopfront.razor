@page "/shopfront"
@using Microsoft.AspNetCore.Authorization

<PageTitle>Shopfront Builder - MAK3R</PageTitle>

<div class="shopfront-page">
    <div class="page-header">
        <h1>
            <span class="material-symbols-outlined">storefront</span>
            Shopfront Builder
        </h1>
        <p class="text-muted">Create and manage your customer-facing manufacturing portal</p>
    </div>

    <div class="coming-soon">
        <div class="coming-soon-content">
            <span class="material-symbols-outlined large-icon">web</span>
            <h2>Coming Soon</h2>
            <p>The Shopfront Builder is currently under development. This will enable you to create custom customer portals for your manufacturing services.</p>
            
            <div class="placeholder-features">
                <h3>Planned Features:</h3>
                <ul>
                    <li>Drag-and-drop interface builder</li>
                    <li>Custom branding and themes</li>
                    <li>Real-time order tracking</li>
                    <li>Quote request system</li>
                    <li>Customer communication tools</li>
                    <li>Integration with manufacturing systems</li>
                </ul>
            </div>
            
            <div class="action-buttons">
                <a href="/dashboard" class="btn btn-primary">
                    <span class="material-symbols-outlined">dashboard</span>
                    Go to Dashboard
                </a>
                <a href="/companies" class="btn btn-secondary">
                    <span class="material-symbols-outlined">business</span>
                    Manage Companies
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .shopfront-page {
        padding: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-header {
        margin-bottom: 2rem;
    }

    .page-header h1 {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .coming-soon {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 60vh;
    }

    .coming-soon-content {
        text-align: center;
        padding: 3rem;
        background: var(--bs-light);
        border-radius: 12px;
        max-width: 600px;
    }

    .large-icon {
        font-size: 4rem !important;
        color: var(--bs-primary);
        margin-bottom: 1rem;
    }

    .placeholder-features {
        text-align: left;
        margin: 2rem 0;
        padding: 1.5rem;
        background: white;
        border-radius: 8px;
    }

    .placeholder-features ul {
        margin-bottom: 0;
    }

    .placeholder-features li {
        margin-bottom: 0.5rem;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-top: 2rem;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        text-decoration: none;
        border-radius: 6px;
        font-weight: 500;
        transition: all 0.2s;
    }

    .btn-primary {
        background-color: var(--bs-primary);
        color: white;
        border: 2px solid var(--bs-primary);
    }

    .btn-primary:hover {
        background-color: var(--bs-primary);
        opacity: 0.9;
        color: white;
    }

    .btn-secondary {
        background-color: transparent;
        color: var(--bs-primary);
        border: 2px solid var(--bs-primary);
    }

    .btn-secondary:hover {
        background-color: var(--bs-primary);
        color: white;
    }
</style>