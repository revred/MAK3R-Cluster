@page "/machines"
@using Microsoft.AspNetCore.Authorization

<PageTitle>Machine Management - MAK3R</PageTitle>

<link href="_content/MAK3R.UI/css/coming-soon.css" rel="stylesheet" />

<div class="coming-soon-page">
    <div class="page-header">
        <h1>
            <span class="material-symbols-outlined">precision_manufacturing</span>
            Machine Management
        </h1>
        <p class="text-muted">Configure and monitor your manufacturing equipment</p>
    </div>

    <div class="coming-soon">
        <div class="coming-soon-content">
            <span class="material-symbols-outlined large-icon">settings</span>
            <h2>Coming Soon</h2>
            <p>The Machine Management interface is currently under development. This will provide comprehensive machine configuration and monitoring capabilities.</p>
            
            <div class="placeholder-features">
                <h3>Planned Features:</h3>
                <ul>
                    <li>Machine registration and setup</li>
                    <li>Real-time status monitoring</li>
                    <li>Performance analytics</li>
                    <li>Maintenance scheduling</li>
                    <li>Configuration management</li>
                    <li>Historical data analysis</li>
                </ul>
            </div>
            
            <div class="action-buttons">
                <a href="/dashboard" class="btn btn-primary">
                    <span class="material-symbols-outlined">dashboard</span>
                    Go to Dashboard
                </a>
                <a href="/machine-wall" class="btn btn-secondary">
                    <span class="material-symbols-outlined">grid_view</span>
                    Machine Wall
                </a>
            </div>
        </div>
    </div>
</div>

