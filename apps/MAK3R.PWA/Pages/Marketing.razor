@page "/"
@attribute [Microsoft.AspNetCore.Authorization.AllowAnonymous]
@layout EmptyLayout

<div class="landing-page">
    <header class="landing-header">
        <div class="header-content">
            <div class="logo">
                <h1>MAK3R.ai</h1>
                <span class="tagline">Manufacturing Intelligence Platform</span>
            </div>
            <div class="header-actions">
                <a href="/dashboard" class="signin-btn">Sign In</a>
                <button class="demo-btn" @onclick="RequestDemo">Get Started</button>
            </div>
        </div>
    </header>

    <main class="landing-main">
        <section class="hero">
            <div class="hero-content">
                <h1 class="hero-title">
                    The future of manufacturing<br/>
                    <span class="hero-emphasis">starts with unified data</span>
                </h1>
                <p class="hero-description">
                    MAK3R.ai transforms fragmented manufacturing systems into a single source of truth. 
                    From shop floor sensors to enterprise planning—see everything, control everything, 
                    optimize everything with real-time actionable intelligence.
                </p>
                <div class="hero-actions">
                    <button class="cta-primary" @onclick="RequestDemo">
                        <span class="material-symbols-outlined">calendar_month</span>
                        Book a Demo
                    </button>
                    <a href="/demo" class="cta-secondary">
                        <span class="material-symbols-outlined">play_circle</span>
                        See it in Action
                    </a>
                    <button class="cta-tertiary" @onclick="StartSimulation">
                        <span class="material-symbols-outlined">labs</span>
                        Try the Simulation
                    </button>
                </div>
                <div class="trust-indicators">
                    <span class="trust-text">Trusted by global manufacturers</span>
                    <div class="trust-badges">
                        <span class="badge">Enterprise Ready</span>
                        <span class="badge">ISO 27001</span>
                        <span class="badge">SOC2 Type II</span>
                    </div>
                </div>
            </div>
            
            <div class="hero-visual">
                <div class="data-grid">
                    <div class="grid-item active">
                        <span class="grid-label">Production Lines</span>
                        <span class="grid-value">24/7 Monitoring</span>
                    </div>
                    <div class="grid-item">
                        <span class="grid-label">Data Points</span>
                        <span class="grid-value">50M+/hour</span>
                    </div>
                    <div class="grid-item pulse">
                        <span class="grid-label">Anomalies Detected</span>
                        <span class="grid-value">Real-time</span>
                    </div>
                    <div class="grid-item">
                        <span class="grid-label">Systems Connected</span>
                        <span class="grid-value">ERP, MES, SCADA</span>
                    </div>
                    <div class="grid-item active">
                        <span class="grid-label">Uptime Improved</span>
                        <span class="grid-value">+23%</span>
                    </div>
                    <div class="grid-item">
                        <span class="grid-label">Cost Reduction</span>
                        <span class="grid-value">$2.1M annually</span>
                    </div>
                </div>
            </div>
        </section>

        <section class="platform-section">
            <div class="container">
                <div class="section-intro">
                    <h2 class="section-title">One platform. Every system. Complete control.</h2>
                    <p class="section-subtitle">
                        Stop fighting fragmented data. MAK3R.ai creates a unified digital twin of your entire operation—from supply chain to shop floor to customer delivery.
                    </p>
                </div>
                
                <div class="capabilities-grid">
                    <div class="capability-card">
                        <div class="capability-icon">
                            <span class="material-symbols-outlined">hub</span>
                        </div>
                        <h3>Universal Integration</h3>
                        <p>Connect any system, any protocol, any data source. Our connector architecture adapts to your infrastructure, not the other way around.</p>
                        <div class="capability-metric">
                            <span class="metric-number">150+</span>
                            <span class="metric-label">Pre-built connectors</span>
                        </div>
                    </div>
                    
                    <div class="capability-card highlight">
                        <div class="capability-icon">
                            <span class="material-symbols-outlined">precision_manufacturing</span>
                        </div>
                        <h3>Digital Twin Intelligence</h3>
                        <p>Transform static data into living, breathing models of your machines, processes, and products. See what's happening now and predict what happens next.</p>
                        <div class="capability-metric">
                            <span class="metric-number">99.7%</span>
                            <span class="metric-label">Prediction accuracy</span>
                        </div>
                    </div>
                    
                    <div class="capability-card">
                        <div class="capability-icon">
                            <span class="material-symbols-outlined">monitoring</span>
                        </div>
                        <h3>Autonomous Operations</h3>
                        <p>Beyond monitoring and alerts. MAK3R.ai takes action—adjusting parameters, triggering workflows, and optimizing performance without human intervention.</p>
                        <div class="capability-metric">
                            <span class="metric-number">24/7</span>
                            <span class="metric-label">Automated optimization</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="impact-section">
            <div class="container">
                <div class="impact-header">
                    <h2 class="impact-title">Manufacturing leaders choose MAK3R.ai</h2>
                    <p class="impact-subtitle">Real results from real deployments across discrete, process, and hybrid operations</p>
                </div>
                
                <div class="impact-stats">
                    <div class="stat-group">
                        <div class="stat-primary">
                            <span class="stat-number">47%</span>
                            <span class="stat-label">Average OEE improvement</span>
                        </div>
                        <div class="stat-detail">Across 200+ production lines</div>
                    </div>
                    
                    <div class="stat-group highlight">
                        <div class="stat-primary">
                            <span class="stat-number">$12.3M</span>
                            <span class="stat-label">Cost savings per facility</span>
                        </div>
                        <div class="stat-detail">Within 18 months of deployment</div>
                    </div>
                    
                    <div class="stat-group">
                        <div class="stat-primary">
                            <span class="stat-number">89%</span>
                            <span class="stat-label">Reduction in data silos</span>
                        </div>
                        <div class="stat-detail">Complete system integration</div>
                    </div>
                    
                    <div class="stat-group">
                        <div class="stat-primary">
                            <span class="stat-number">6.2x</span>
                            <span class="stat-label">Faster decision making</span>
                        </div>
                        <div class="stat-detail">Real-time insights at scale</div>
                    </div>
                </div>
            </div>
        </section>

        <section class="final-cta">
            <div class="container">
                <div class="cta-content">
                    <h2 class="cta-title">Start your digital transformation today</h2>
                    <p class="cta-description">
                        Join 500+ manufacturing leaders who chose MAK3R.ai to unify their operations, 
                        eliminate data silos, and achieve unprecedented operational visibility.
                    </p>
                    
                    <div class="cta-actions">
                        <button class="cta-primary-large" @onclick="RequestDemo">
                            <span class="material-symbols-outlined">schedule</span>
                            <div class="button-content">
                                <span class="button-title">Book Your Demo</span>
                                <span class="button-subtitle">See MAK3R.ai in your environment</span>
                            </div>
                        </button>
                        
                        <a href="/demo" class="cta-secondary-large">
                            <span class="material-symbols-outlined">play_circle</span>
                            <div class="button-content">
                                <span class="button-title">Interactive Demo</span>
                                <span class="button-subtitle">Explore the platform now</span>
                            </div>
                        </a>
                        
                        <button class="cta-tertiary-large" @onclick="StartSimulation">
                            <span class="material-symbols-outlined">experiment</span>
                            <div class="button-content">
                                <span class="button-title">Try the Simulation</span>
                                <span class="button-subtitle">Experience live manufacturing data</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="cta-assurance">
                        <span>No contracts • No credit card • Full access in minutes</span>
                    </div>
                </div>
            </div>
        </section>
    </main>
</div>

