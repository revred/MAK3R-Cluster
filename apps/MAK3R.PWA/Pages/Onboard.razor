@page "/onboard"
@using Microsoft.AspNetCore.Authorization

<PageTitle>Onboard - MAK3R</PageTitle>

<link href="_content/MAK3R.UI/css/coming-soon.css" rel="stylesheet" />

<div class="coming-soon-page">
    <div class="page-header">
        <h1>
            <span class="material-symbols-outlined">settings_input_composite</span>
            Onboarding Wizard
        </h1>
        <p class="text-muted">Set up your manufacturing environment</p>
    </div>

    <div class="coming-soon">
        <div class="coming-soon-content">
            <span class="material-symbols-outlined large-icon">construction</span>
            <h2>Coming Soon</h2>
            <p>The onboarding wizard is currently under development. This will guide you through setting up your digital twin environment.</p>
            
            <div class="placeholder-features">
                <h3>Planned Features:</h3>
                <ul>
                    <li>Company setup and configuration</li>
                    <li>Site and facility mapping</li>
                    <li>Machine registration and connectivity</li>
                    <li>Data source configuration</li>
                    <li>Initial dashboard customization</li>
                </ul>
            </div>
            
            <div class="action-buttons">
                <a href="/dashboard" class="btn btn-primary">
                    <span class="material-symbols-outlined">dashboard</span>
                    Go to Dashboard
                </a>
                <a href="/companies" class="btn btn-secondary">
                    <span class="material-symbols-outlined">business</span>
                    Manage Companies
                </a>
            </div>
        </div>
    </div>
</div>

